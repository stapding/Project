<Page x:Class="WPFModernVerticalMenu.Pages.CreateReport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFModernVerticalMenu.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateReport" Loaded="Page_Loaded">

    <Border CornerRadius="5" Background="{DynamicResource SecundaryBackgroundColor}">
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Создание отчёта" FontSize="40" TextAlignment="Center" Grid.ColumnSpan="2" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="(Вы можете навести на название категории чтобы посмотреть подробности)" TextAlignment="Center" Grid.ColumnSpan="2" FontSize="20" Foreground="White"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" HorizontalAlignment="Right" Margin="0,0,5,0" x:Name="stkpnlText">
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Месяц отчёта" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (Январь, Февраль, Март, Апрель, Май, Июнь, Июль, Август, Сентябрь, Октябрь, Ноябрь, Декабрь)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Внешний доход" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (подарили, подработка, вернули долг, нашли где-то)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Автомобиль" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (бензин, мойка, ремонт, запчасти, страховка, стоянка, техосмотр, налоги, штрафы, парковка)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Бизнес" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (налоги, зарплата, реклама, офис и канцелярия, услуги)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Благотворительность, подарки, помощь" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (пожертвования, взносы в благотворительные фонды, материальная помощь родителям/друзьям)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Дети" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (одежда, питание, игрушки, книги, няня, мебель, услуги, развлечения)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Домашние животные" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (питание, товары для животных, услуги ветеринара)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Здоровье и красота" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (косметика, парфюмерия, салоны красоты, спорт, лекарства, услуги)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Ипотека, долги, кредиты" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (выплата по кредиту, выплата по ипотеке, досрочное гашение долга, покрытие процентов)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Квартира и связь" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (электричество, вода, тепло, газ, радио, телефон, интернет, аренда, вывоз мусора, кабельное телевидение, охрана, консьерж)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Налоги и страхование" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (выплата по налогам, выплаты по страховке)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Образование" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (учебники, канцтовары, плата за обучение, репетитор)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Одежда и аксессуары" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (одежда, обувь, аксессуары, украшения, химчистка, ателье, ремонт обуви)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Отдых и развлечения" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (игры, фильмы, книги, диски, журналы, кафе и рестораны, кино, фото, театр, выставки, боулинг)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Питание" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (основные продукты, деликатесы, алкоголь, еда на работе, школьные завтраки)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Разное" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (служебные расходы, карманные расходы, чаевые, взносы, банковские комиссии, нотариус, утеря денег, доставка товара)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Ремонт и мебель" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (закупка материалов или инструментов для ремонты мебели, вызов мастера по ремонту, закупка мебели)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Товары для дома" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (белье, мелкая техника, инструменты, посуда, кухонная утварь, товары для ванной, предметы интерьера)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Транспорт" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (автобус, проездные, авиа, метро, такси, электричка)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Хобби" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (ваши затраты на хобби)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                        <StackPanel Height="50" Margin="0 10 0 0">
                            <TextBlock Margin="0 10 0 0" Text="Бытовая техника, компьютер, материалы" TextAlignment="Right" FontSize="20" Foreground="White">
                                <TextBlock.ToolTip>
                                    <ToolTip>
                                        (ремонт техники/компьютера, расходные материалы, прочяя бытовая техника)
                                    </ToolTip>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Left" x:Name="stkpnlTB">
                        <TextBox x:Name="tbDate" Tag="Введите название месяца" Style="{StaticResource tbox_CalendarIconPlaceholder}" Foreground="White"/>
                        <TextBox x:Name="tbInnerIncome" Tag="Введите внешний доход" Style="{StaticResource tbox_CashIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                        <TextBox  Tag="Введите затраты" Style="{StaticResource tbox_AlertIconPlaceholder}" Foreground="White"/>
                    </StackPanel>
                </Grid>
                <Button Width="100" Height="25" Background="Transparent" Content="Создать" Margin="0,10,0,0" Grid.ColumnSpan="2" Foreground="White" Click="Button_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border BorderThickness="2" CornerRadius="10" BorderBrush="White">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>
